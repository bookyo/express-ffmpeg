extends cmslayout
block header
  title 会员登陆 | #{portal.title}
block content
  .layui-container.mt-20
    .layui-row.layui-col-space20
      .layui-col-md6.layui-col-md-offset3
        .card
          h2.login-title.text-center 用户登陆
          form.layui-form#login(action="",method="post")
            .layui-form-item
              label.layui-form-label 邮箱
              .layui-input-block
                input.layui-input(type="text", name="email", required, lay-verify="required|email", placeholder="输入邮箱")
            .layui-form-item
              label.layui-form-label 密码
              .layui-input-block
                input.layui-input(type="password", name="password", required, lay-verify="length", placeholder="输入密码")
            .layui-form-item
              .layui-input-block
                button.layui-btn(lay-submit, lay-filter="loginform") 登陆
                a.layui-btn(href="/register") 注册
        p.flash #{info}
          
              
          